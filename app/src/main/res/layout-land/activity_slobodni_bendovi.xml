<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_slobodni_bendovi"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    tools:context="com.example.aleksandar.mysqldemo.SlobodniBendovi">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        app:srcCompat="@color/blue1"

        android:layout_marginTop="6dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/ls"
        android:layout_toStartOf="@+id/ls" />

    <CalendarView
        android:dateTextAppearance="@android:style/TextAppearance.Holo.Medium"
        android:layout_width="wrap_content"
        android:id="@+id/calendarView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:elevation="0dp"
        android:layout_height="300dp"
        android:weekDayTextAppearance="@style/TextAppearance.AppCompat.Body2"

        android:layout_alignParentBottom="true" />

    <ListView

        android:background="@color/zauzeti"
        android:id="@+id/lv"
        android:layout_height="wrap_content"

        android:dividerHeight="5dp"
        android:headerDividersEnabled="true"
        android:footerDividersEnabled="true"
        android:divider="@color/common_google_signin_btn_text_dark_pressed"
        android:elevation="0dp"

        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_width="150dp" />

    <ListView


        android:background="@color/slobodni"
        android:id="@+id/ls"
        android:layout_height="wrap_content"

        android:dividerHeight="5dp"
        android:headerDividersEnabled="true"
        android:footerDividersEnabled="true"
        android:elevation="0dp"
        android:divider="@color/common_google_signin_btn_text_dark_default"
        android:visibility="visible"

        android:layout_toLeftOf="@+id/lv"
        android:layout_width="170dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/dijamant"
        android:id="@+id/imageView"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/ls"
        android:layout_alignStart="@+id/ls"
        android:layout_marginLeft="26dp"
        android:layout_marginStart="26dp" />


</RelativeLayout>
