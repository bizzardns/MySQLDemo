<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.aleksandar.mysqldemo.Main2Activity">


    <DatePicker

        android:calendarTextColor="@color/colorPrimaryDark"
        android:id="@+id/datePicker2"
        style="@android:style/Widget.DeviceDefault.Light.CalendarView"
        android:elevation="0dp"
        android:layout_width="wrap_content"
        android:spinnersShown="true"
        android:headerBackground="@color/green"
        android:headerDayOfMonthTextAppearance="@color/colorPrimaryDark"
        android:keepScreenOn="false"
        android:layout_height="450dp"
        android:calendarViewShown="false"
        android:layout_above="@+id/button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="9dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:onClick="rez"
        android:text="Rezervisi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        style="@android:style/Widget.Button"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:elevation="1dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Spinner

        android:backgroundTint="@color/colorPrimary"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:id="@+id/spinner2"
        android:spinnerMode="dialog"
        android:theme="@android:style/Widget.DropDownItem.Spinner"
        android:layout_width="wrap_content"
        android:layout_marginRight="86dp"
        android:layout_marginEnd="86dp"
        android:layout_alignTop="@+id/button"
        android:layout_toLeftOf="@+id/button"
        android:layout_marginTop="11dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
