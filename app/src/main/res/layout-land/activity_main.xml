<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/colorPrimary"
    tools:context="com.example.aleksandar.mysqldemo.MainActivity">

    <EditText
        android:textColorHint="@color/colorPrimary"
        android:background="@android:drawable/editbox_background_normal"
        android:textCursorDrawable="@null"
        android:hint="Username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/etUserName"
        android:layout_marginBottom="38dp"
        android:layout_above="@+id/etPassword"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:layout_alignLeft="@+id/etPassword"
        android:layout_alignStart="@+id/etPassword"
        android:layout_alignRight="@+id/etPassword"
        android:layout_alignEnd="@+id/etPassword"
        android:textAlignment="center" />

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:srcCompat="@drawable/user"
        android:id="@+id/imageView6"
        android:layout_alignTop="@+id/etUserName"
        android:layout_toLeftOf="@+id/etUserName"
        android:layout_toStartOf="@+id/etUserName" />

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:srcCompat="@drawable/key"
        android:id="@+id/imageView7"
        android:layout_below="@+id/etUserName"
        android:layout_toLeftOf="@+id/etPassword"
        android:layout_toStartOf="@+id/etPassword" />

    <CheckBox
        android:text="Save"
        android:onClick="itemClicked"
        android:background="@color/colorPrimary"
        android:layout_height="wrap_content"
        android:id="@+id/checkBox"
        style="@style/Widget.AppCompat.CompoundButton.CheckBox"
        android:layout_width="80sp"
        android:textColor="@color/white"
        app:buttonTint="@color/white"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="53dp" />

    <EditText
        android:textColorHint="@color/colorPrimary"
        android:textCursorDrawable="@null"
        android:background="@android:drawable/editbox_background_normal"
        android:hint="Password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/etPassword"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textAlignment="center"
        android:layout_above="@+id/checkBox"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="9dp" />

    <Button
        android:textColor="@color/white"
        android:text="Login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnLogin"
        android:onClick="OnLogin"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        style="@android:style/Widget.Button"
        android:fontFamily="sans-serif"
        android:elevation="4dp"
        android:textAlignment="center"
        android:background="@android:drawable/editbox_background_normal"
        android:backgroundTint="?attr/colorPrimaryDark"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/etPassword"
        android:layout_alignStart="@+id/etPassword"
        android:layout_alignRight="@+id/etPassword"
        android:layout_alignEnd="@+id/etPassword" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/login"
        android:id="@+id/imageView2"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="199dp"
        android:layout_marginStart="199dp"
        android:layout_above="@+id/etUserName" />


</RelativeLayout>
