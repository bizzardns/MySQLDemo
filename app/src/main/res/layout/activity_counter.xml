<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.aleksandar.mysqldemo.Counter">
    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp">
    <ListView
        android:listSelector="@android:color/transparent"
        android:id="@+id/lv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView"
        android:divider="@android:drawable/button_onoff_indicator_off"
        android:headerDividersEnabled="true"
        android:footerDividersEnabled="true"
        android:dividerHeight="3dp" />

    <TextView
        android:textColor="@color/white"
        android:background="@android:color/holo_purple"
        android:padding="10dp"
        android:text="Bend"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        tools:ignore="HardcodedText"
        android:textSize="18sp"
        android:layout_marginRight="5dp" />

    <TextView
        android:textSize="18sp"
        android:textColor="@color/white"
        android:background="@android:color/holo_orange_dark"
        android:padding="10dp"
        android:text="Broj svadbi"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/list"
        android:layout_toRightOf="@+id/textView"
        android:id="@+id/textView2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        tools:ignore="HardcodedText,RtlHardcoded,UnknownIdInLayout"
        android:textAlignment="center" />

</RelativeLayout>
<android.support.design.widget.NavigationView
android:layout_width="wrap_content"
android:layout_height="match_parent"
android:id="@+id/nav_item"
app:menu="@menu/menu_slide"
app:headerLayout="@layout/navigation_header"
android:layout_gravity = "start">


</android.support.design.widget.NavigationView>

    </android.support.v4.widget.DrawerLayout>