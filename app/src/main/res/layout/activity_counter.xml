<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.aleksandar.mysqldemo.Counter"
    android:screenOrientation="landscape">


    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="0dp">

        <Spinner
            android:id="@+id/spinner2"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="310dp"
            android:layout_weight="1"
            android:background="@color/common_plus_signin_btn_text_dark_default"
            android:popupBackground="@color/colorPrimary"
            android:visibility="invisible" />

        <ListView
            android:id="@+id/lv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView"
            android:divider="?android:attr/colorControlHighlight"
            android:dividerHeight="1dp"
            android:footerDividersEnabled="true"
            android:headerDividersEnabled="true"
            android:listSelector="@android:color/transparent" />


        <TextView
            android:id="@+id/textView"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="?android:attr/colorPrimary"
            android:padding="10dp"
            android:text="Bend"
            android:textAlignment="textStart"
            android:textColor="@color/common_google_signin_btn_text_dark_default"
            android:textSize="18sp"
            tools:ignore="HardcodedText,NewApi,RtlCompat" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/list"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/textView"
            android:background="?attr/colorPrimary"
            android:padding="10dp"
            android:text="Svadbe"
            android:textAlignment="textEnd"
            android:textColor="@color/white"
            android:textSize="18sp"
            tools:ignore="HardcodedText,RtlCompat,RtlHardcoded,UnknownIdInLayout" />


    </RelativeLayout>

    <android.support.design.widget.NavigationView
android:layout_width="wrap_content"
android:layout_height="match_parent"
android:id="@+id/nav_item"
app:menu="@menu/menu_slide"
app:headerLayout="@layout/navigation_header"
android:layout_gravity = "start">


</android.support.design.widget.NavigationView>

    </android.support.v4.widget.DrawerLayout>