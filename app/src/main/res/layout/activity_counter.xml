<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.aleksandar.mysqldemo.Counter"
    android:screenOrientation="landscape">



    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp">


        <ListView
        android:listSelector="@android:color/transparent"
        android:id="@+id/lv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView"
        android:divider="?android:attr/colorControlHighlight"
        android:footerDividersEnabled="true"
        android:headerDividersEnabled="true"
        android:dividerHeight="1dp" />

    <TextView
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:background="?android:attr/colorPrimary"
        android:padding="10dp"
        android:text="Bend"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        tools:ignore="HardcodedText,NewApi,RtlCompat"
        android:textSize="18sp"
        android:textAlignment="textStart" />

    <TextView
        android:textSize="18sp"
        android:textColor="@color/white"
        android:background="?attr/colorPrimary"
        android:padding="10dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/list"
        android:layout_toRightOf="@+id/textView"
        android:id="@+id/textView2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        tools:ignore="HardcodedText,RtlCompat,RtlHardcoded,UnknownIdInLayout"
        android:textAlignment="textEnd"
        android:text="Svadbe" />


</RelativeLayout>
<android.support.design.widget.NavigationView
android:layout_width="wrap_content"
android:layout_height="match_parent"
android:id="@+id/nav_item"
app:menu="@menu/menu_slide"
app:headerLayout="@layout/navigation_header"
android:layout_gravity = "start">


</android.support.design.widget.NavigationView>

    </android.support.v4.widget.DrawerLayout>