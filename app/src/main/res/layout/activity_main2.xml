<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.aleksandar.mysqldemo.Main2Activity">
    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <Button
        android:onClick="rez"
        android:text="RezerviÅ¡i"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        style="@android:style/Widget.DeviceDefault.Button"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:elevation="1dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="@color/green"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textSize="18sp"
        android:textStyle="normal|bold" />


    <CalendarView

        android:dateTextAppearance="@android:style/TextAppearance.Holo.Medium"
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:weekDayTextAppearance="@style/TextAppearance.AppCompat.Body2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/calendarView2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true" />
    <Spinner

        android:backgroundTint="@color/colorPrimary"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinner2"
        android:spinnerMode="dialog"
        android:theme="@android:style/Widget.DropDownItem.Spinner"
        android:layout_below="@+id/calendarView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="34dp" />

    <EditText
        android:background="@android:drawable/editbox_background_normal"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Ime"
        android:textColorHint="@android:color/holo_purple"
        android:ems="10"
        android:id="@+id/editIme"
        android:layout_alignBaseline="@+id/editEvent"
        android:layout_alignBottom="@+id/editEvent"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"

        android:layout_marginRight="5dp"
        />


    <EditText
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:background="@android:drawable/editbox_background_normal"
        android:hint="Grad"
        android:textColorHint="@color/colorPrimary"
        android:ems="10"
        android:id="@+id/editMesto"
        android:layout_below="@+id/editEvent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="36dp"
        android:layout_marginLeft="5dp"
        android:layout_alignRight="@+id/editEvent"
        android:layout_alignEnd="@+id/editEvent" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:background="@android:drawable/editbox_background_normal"
        android:hint="Restoran"
        android:textColorHint="@color/green"
        android:ems="10"
        android:id="@+id/editRestoran"
        android:layout_alignBaseline="@+id/editMesto"
        android:layout_alignBottom="@+id/editMesto"

        android:layout_alignLeft="@+id/editIme"
        android:layout_alignStart="@+id/editIme"
        android:layout_marginRight="5dp" />

    <EditText
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Event"
        android:textColorHint="@color/orange"
        android:ems="10"
        android:id="@+id/editEvent"
        android:layout_marginTop="47dp"
        android:background="@android:drawable/editbox_background_normal"
        android:layout_below="@+id/spinner2"
        android:layout_alignLeft="@+id/button"
        android:layout_alignStart="@+id/button"
        android:layout_width="180dp" />

</RelativeLayout>

<android.support.design.widget.NavigationView
android:layout_width="wrap_content"
android:layout_height="match_parent"
android:id="@+id/nav_item"
app:menu="@menu/menu_slide"
app:headerLayout="@layout/navigation_header"
android:layout_gravity = "start">


</android.support.design.widget.NavigationView>

    </android.support.v4.widget.DrawerLayout>