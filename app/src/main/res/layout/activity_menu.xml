<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="100dp"
    android:paddingRight="100dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.aleksandar.mysqldemo.MenuActivity">
    <ImageButton
        android:onClick="btn"
        app:srcCompat="@drawable/pencilsmall"
        android:id="@+id/imageButton6"
        style="@android:style/Widget.ImageButton"
        android:tint="@color/green"
        android:layout_width="100dp"
        android:scaleType="centerInside"

        android:layout_height="90dp" />


    <ImageButton
        android:onClick="btn5"
        app:srcCompat="@drawable/rubbish"
        android:id="@+id/imageButton4"
        style="@android:style/Widget.ImageButton"
        android:tint="@color/red"

        android:layout_width="100dp"
        android:scaleType="centerInside"
        android:layout_height="90dp" />

    <ImageButton
        android:onClick="btn2"
        app:srcCompat="@drawable/guitar"
        android:id="@+id/imageButton1"
        style="@android:style/Widget.ImageButton"
        android:tint="@android:color/holo_blue_dark"
        android:elevation="0dp"
        android:layout_width="100dp"
        android:scaleType="centerInside"
        android:layout_height="90dp" />
    <ImageButton
        android:onClick="btn1"
        app:srcCompat="@drawable/graphic"
        android:id="@+id/imageButton5"
        style="@android:style/Widget.ImageButton"
        android:tint="@color/colorAccent"
        android:layout_width="100dp"
        android:scaleType="centerInside"
        android:layout_height="90dp" />
    <ImageButton
        android:onClick="btn3"
        app:srcCompat="@drawable/email"
        android:id="@+id/imageButton3"
        style="@android:style/Widget.ImageButton"
        android:layout_width="100dp"
        android:scaleType="centerInside"

        android:layout_height="90dp" />

    <ImageButton
        android:onClick="btn4"
        app:srcCompat="@drawable/icon"
        android:id="@+id/imageButton2"
        style="@android:style/Widget.ImageButton"
        android:tint="?android:attr/colorActivatedHighlight"
        android:layout_width="100dp"
        android:scaleType="centerInside"
        android:layout_height="90dp" />









</TableLayout>
