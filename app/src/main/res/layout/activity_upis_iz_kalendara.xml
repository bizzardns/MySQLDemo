<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_upis_iz_kalendara"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.aleksandar.mysqldemo.UpisIzKalendara">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:id="@+id/textView3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="normal|bold"
        android:textSize="30sp"
        android:textAlignment="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:id="@+id/textView5"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="normal|bold"
        android:layout_below="@+id/textView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/editEvent"
        android:layout_alignRight="@+id/editEvent"
        android:layout_alignEnd="@+id/editEvent"
        android:layout_marginTop="8dp"
        android:id="@+id/editIme"
        android:hint="Ime" />

    <Button
        android:onClick="rez"
        android:text="RezerviÅ¡i"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        style="@android:style/Widget.DeviceDefault.Button"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:elevation="1dp"
        android:backgroundTint="@color/green"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:layout_below="@+id/editMesto"
        android:layout_marginTop="58dp"
        android:layout_alignLeft="@+id/editMesto"
        android:layout_alignStart="@+id/editMesto"
        android:layout_alignRight="@+id/editMesto"
        android:layout_alignEnd="@+id/editMesto" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_marginTop="12dp"
        android:id="@+id/editEvent"
        android:hint="Event"
        android:layout_below="@+id/textView5"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editRestoran"
        android:hint="Restoran"
        android:layout_below="@+id/editIme"
        android:layout_alignLeft="@+id/editIme"
        android:layout_alignStart="@+id/editIme"
        android:layout_marginTop="9dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editMesto"
        android:hint="Grad"
        android:layout_below="@+id/editRestoran"
        android:layout_alignLeft="@+id/editRestoran"
        android:layout_alignStart="@+id/editRestoran"
        android:layout_marginTop="9dp" />
</RelativeLayout>
