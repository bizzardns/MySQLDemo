<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.aleksandar.mysqldemo.SlobodniBendovi">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <CalendarView
        android:dateTextAppearance="@android:style/TextAppearance.Holo.Medium"
        android:layout_width="wrap_content"
        android:id="@+id/calendarView"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:elevation="0dp"
        android:layout_height="300dp"
        android:weekDayTextAppearance="@style/TextAppearance.AppCompat.Body2" />

        <ImageView
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        app:srcCompat="@drawable/dijamant"
        android:id="@+id/imageView"
        android:layout_below="@+id/calendarView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="42dp"
            android:scaleType="fitCenter" />

        <HorizontalScrollView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/calendarView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:fillViewport="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/calendarView">


            <ListView


        android:background="@color/slobodni"
        android:id="@+id/ls"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"


        android:dividerHeight="5dp"
        android:headerDividersEnabled="true"
        android:footerDividersEnabled="true"
        android:elevation="0dp"
        android:divider="@color/common_google_signin_btn_text_dark_default"
        android:layout_width="350dp"
        android:visibility="visible"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="2dp" />

            <ListView

                android:background="@color/zauzeti"
                android:id="@+id/lv"
                android:layout_height="wrap_content"
                android:layout_width="350dp"

                android:dividerHeight="5dp"
                android:headerDividersEnabled="true"
                android:footerDividersEnabled="true"
                android:divider="@color/common_google_signin_btn_text_dark_pressed"
                android:elevation="0dp"
                android:layout_marginLeft="14dp"
                android:layout_marginStart="14dp"
                android:layout_toRightOf="@+id/ls"
                android:layout_toEndOf="@+id/ls"
                android:layout_alignTop="@+id/ls" />

        </RelativeLayout>
        </HorizontalScrollView>

        <Spinner

            android:backgroundTint="@color/colorPrimary"
            android:textAlignment="center"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:id="@+id/spinner2"
            android:spinnerMode="dialog"
            android:theme="@android:style/Widget.DropDownItem.Spinner"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />


    </RelativeLayout>
<android.support.design.widget.NavigationView
android:layout_width="wrap_content"
android:layout_height="match_parent"
android:id="@+id/nav_item"
app:menu="@menu/menu_slide"
app:headerLayout="@layout/navigation_header"
android:layout_gravity = "start">


</android.support.design.widget.NavigationView>

    </android.support.v4.widget.DrawerLayout>