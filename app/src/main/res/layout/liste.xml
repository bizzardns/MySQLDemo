<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="70dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bendTxt"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="18sp"
        android:layout_marginStart="15dp"
        android:textColor="@color/black"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imeTxt"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/eventTxt"
        android:layout_toEndOf="@+id/eventTxt"
        android:layout_marginStart="15dp"
        android:textSize="14sp"
        android:layout_marginBottom="10dp"
        android:textStyle="normal|bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/eventTxt"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="15dp"
        android:textSize="14sp"
        android:layout_marginBottom="10dp"
        android:fontFamily="sans-serif"
        android:textStyle="normal|bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lokalTxt"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/imeTxt"
        android:layout_toEndOf="@+id/imeTxt"
        android:layout_marginStart="15dp"
        android:textSize="14sp"
        android:layout_marginBottom="10dp"
        android:textStyle="normal|bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gradTxt"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/lokalTxt"
        android:layout_toRightOf="@+id/lokalTxt"
        android:layout_marginStart="15dp"
        android:textSize="14sp"
        android:layout_marginBottom="10dp"
        android:textStyle="normal|bold" />

</RelativeLayout>