<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bendTxt"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/eventTxt" />

    <TextView
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:id="@+id/imeTxt"
        android:layout_below="@+id/bendTxt"
        android:layout_toRightOf="@+id/eventTxt"
        android:layout_toEndOf="@+id/eventTxt" />

    <TextView
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bendTxt"
        android:layout_toRightOf="@+id/imeTxt"
        android:layout_toEndOf="@+id/imeTxt"
        android:id="@+id/gradTxt" />

    <TextView
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bendTxt"
        android:layout_toRightOf="@+id/gradTxt"
        android:layout_toEndOf="@+id/gradTxt"
        android:id="@+id/lokalTxt" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bendTxt"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>