<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@drawable/custom_ripple_border"
    android:orientation="vertical">

    <TextView
        android:id="@+id/bendTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="normal|bold" />

    <TextView
        android:id="@+id/imeTxt"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/eventTxt"
        android:layout_toEndOf="@+id/eventTxt"
        android:layout_toRightOf="@+id/eventTxt"
        android:textAlignment="textStart"
        android:textSize="14sp"
        android:textStyle="normal|bold" />

    <TextView
        android:id="@+id/eventTxt"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/bendTxt"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/bendTxt"
        android:layout_marginBottom="10dp"
        android:fontFamily="sans-serif"
        android:textAlignment="textStart"
        android:textSize="14sp"
        android:textStyle="normal|bold" />

    <TextView
        android:id="@+id/gradTxt"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/eventTxt"
        android:layout_alignLeft="@+id/eventTxt"
        android:layout_alignStart="@+id/eventTxt"
        android:layout_marginBottom="8dp"
        android:layout_toLeftOf="@+id/imeTxt"
        android:layout_toStartOf="@+id/imeTxt"
        android:textAlignment="textStart"
        android:textStyle="normal|bold" />

    <TextView
        android:id="@+id/lokalTxt"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/gradTxt"
        android:layout_alignBottom="@+id/gradTxt"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_toEndOf="@+id/gradTxt"
        android:layout_toRightOf="@+id/gradTxt"
        android:textAlignment="textStart"
        android:textSize="14sp"
        android:textStyle="normal|bold" />

</RelativeLayout>